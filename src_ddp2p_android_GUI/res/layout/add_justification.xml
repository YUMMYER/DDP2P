<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adding_justification"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:text="Adding Justification" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <EditText
            android:id="@+id/add_justification_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage|textCapWords|textAutoCorrect|textAutoComplete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/body" />

        <EditText
            android:id="@+id/add_justification_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_add_justification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/adding_justification_justification_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:gravity="center"
        android:text="Replying to Justification"
        android:background="@color/gray"
        android:layout_margin="20dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/adding_justification_check"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adding_justification_justification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Justification Title"
            android:textStyle="italic"
            android:background="@color/lightgray"
            android:layout_margin="10dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/adding_justification_justification_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Justification Body"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/adding_justification_motion_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:gravity="center"
        android:background="@color/gray"
        android:text="Motion"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/adding_justification_motion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:background="@color/lightgray"
        android:layout_margin="10dp"
        android:text="Motion Title"
        />
    <TextView
        android:id="@+id/adding_justification_motion_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion Body"
        />
</LinearLayout>