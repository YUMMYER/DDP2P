<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/card_style_bg_no_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_main_adhoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:text="Adhoc"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/card_style_bg_no_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_main_max_image_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:text="Max Image Size"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/card_style_bg_no_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_main_update_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Update Server Preference"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>