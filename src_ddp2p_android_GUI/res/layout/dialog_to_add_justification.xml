<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_add_new_justification_refering_label"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Refering:" />
    <TextView
        android:id="@+id/dialog_add_new_justification_refering"
        android:visibility="gone"
        android:layout_margin="20dp"
        android:typeface="monospace"
        android:textStyle="bold|italic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Answered justification" />

    <TextView
        android:id="@+id/dialog_add_new_justification_question_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to add a justification for your action?" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_add_new_justification"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/yes" />

        <Button
            android:id="@+id/do_not_add_new_justification"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/no" />
    </LinearLayout>

</LinearLayout>