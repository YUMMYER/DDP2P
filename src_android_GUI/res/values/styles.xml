<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Load_PK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <!-- ActionBar tabs styles -->

    <style name="DDP2P" parent="@style/DDp2P_Theme">
        <item name="android:actionBarTabBarStyle">@style/DDP2PActionBarTabBar</item>
        <item name="android:actionBarTabStyle">@style/DDP2PActionBarTabView</item>
        <item name="android:actionBarTabTextStyle">@style/DDP2PActionBarTabText</item>
        <item name="android:buttonStyle">@style/DDP2PButton</item>
        <item name="android:actionBarStyle">@style/DDP2PActionBar</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="DDP2PActionBarTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">

        <!-- tab bar -->
        <item name="android:showDividers">none</item>
    </style>

    <style name="DDP2PActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@drawable/actionbar_tab_bg</item>
    </style>

    <style name="DDP2PActionBarTabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DDP2PActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">#333333</item>
        <item name="android:titleTextStyle">@style/DDP2P.ActionBar.TitleTextStyle</item>
    </style>

    <style name="DDP2P.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DDP2PButton" parent="@style/ButtonDDp2P_Theme">
        <item name="android:background">@color/ddp2p_general</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>